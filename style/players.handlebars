<h3>Add new player:</h3>
<form id="addPlayer" action="/player" method="post">
    First name: <input type="text" name="fname"><br>
    Last name: <input type="text" name="lname"><br>
    Jersey Number: <input type="number" name="jerseyNumber"><br>
    Career Games: <input type="number" name="gamesPlayed"><br>
    Career Points: <input type="number" name="pointsMade"><br>
    Player Position: <select name="positions"> 
        {{#each positions}}
        <option value="{{id}}">{{name}}</option>
        {{/each}}
    </select><br>
    <input type="submit" value="Submit">
 </form>
<br/>


<h3>Current player:</h3>
<table>
    <thead> 
        <th>First Name</th> 
        <th>Last Name</th> 
        <th>Jersey Number:</th> 
        <th>Career Games: </th>
        <th>Career Points: </th>
        <th>Player Position:</th>
    </thead> 
    <tbody>
        {{#each player}} 
        <tr> 
            <td>{{fname}}</td> 
            <td>{{lname}}</td> 
            <td>{{jerseyNumber}}</td> 
            <td>{{gamesPlayed}}</td>
            <td>{{pointsMade}}</td>
            <td>{{positions}}</td>
            <!--
            <td><button onclick="deletePlayer({{id}})">Delete</button></td>
            <td><a href="/player/{{id}}">Update</a></td> 
            -->
        </tr> 
        {{/each}} 
    </tbody> 
</table> 
