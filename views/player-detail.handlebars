<script src="/detail_player_script.js" defer></script>
<h1>PLAYER DETAILS</h1>

<div class="player-box row result-box">
    <h3>
        {{first_name}} {{last_name}}
    </h3>
    <ul>
        {{#if teamName}}
        <li>Team: {{teamName}}</li>
        {{else}}
        <li>Team: NONE</li>
        {{/if}}
        <li>Jersey Number: {{jersey_num}}</li>
        {{#if nickname}}
        <li>Nickname: {{nickname}}</li>
        {{/if}}
        <li>Games Played: {{games}}</li>
        <li>Points Made: {{points}}</li>
        {{#if position}}
        <li> Plays Positions:
        {{#each position}}
            {{position_name}} |
        {{/each}}
        </li>
        {{/if}}
    </ul>
    {{#if id}}
    <div class="removal" onclick="removePlayer({{id}})">|Remove Player|</div>
    {{/if}}
</div>

<div class="forms-container">
    <div class="position-update form">
        <h2>Add/Remove a Position</h2>
        <form class="insert-form" id="position-change">
            <input type="text" name="position-name" value="Point Guard">
        </form>
        <div id="position-change-button" class="button" onclick="updatePosition({{id}})">Update!</div>
    </div>
    <hr />
    <div class="team-update form">
        <h2>Update Team</h2>
        <div id="pl-det-response">Leave Fields Empty to Remove Team</div>
        <form class="insert-form" id="team-change">
            <label>Team Name</label>
            <input type="text" name="team-name" value="Portland Trailblazers">
            <label>Team Location</label>
            <input type="text" name="team-loc" value="Portland, OR">
        </form>
        <div id="team-change-button" class="button" onclick="updateTeam({{id}})">Update!</div>
    </div>
</div>